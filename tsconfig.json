{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": ["es7", "dom"],
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots" : ["node_modules/@types", "./types"],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "**/*.spec.(js|jsx|ts|tsx)",
        "src/setupTests.ts",
        "semantic",
        "config"
      ]
}
